---
import Section from "../Section.astro";

import { projects } from  "@cv";
---

<Section title="Proyectos">
    <ul>
        {
        projects.map(({url, description, highlights, name, isActive}) =>{
            return(
                <li>
                    <article>
                        <header>
                            <h3>
                            <a href={url} title={`Ver proyecto ${name}`}>
                                {name}
                            </a>
                            {
                                isActive && <span>&bull;</span>
                            }
                            </h3>
                            <p>{description}</p>
                        </header>
                        <footer>
                                {
                                    highlights.map((highlight) => {
                                        return <span>{highlight}</span>
                                    })
                                }
                        </footer>
                    </article>
                </li>
            )
        } )
    </ul>
</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }

    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header{
        flex: 1;
    }

    article a{
        color: black;
    }

    article a:hover{
        text-decoration: underline;
    }

    article p{
        margin-top: 4px;
        font-size: 0.75rem;
        line-height: 1.2;
    }

    article h3 span{
        color: rgb(1, 158, 22);
    }

    footer{
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span{
        border-radius:6px ;
        background: #e1e0e0;
        color: #444;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

    footer span:hover{
        background: #d3d3d3;
    }

/* Agrega estas reglas para el modo oscuro */
    :global(.dark) article {
        border: 1px solid #444;
        background-color: #333;
    }

    :global(.dark) article a {
        color: white;
    }

    :global(.dark) article p,
    :global(.dark) article h3,
    :global(.dark) footer span {
        color: white;
    }

    :global(.dark) footer span {
        background: #555;
    }

    :global(.dark) footer span:hover {
        background: #666;
    }
</style>